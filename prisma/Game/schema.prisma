generator client {
  provider = "prisma-client-js"
  output   = "../Game/generated/prisma"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_GAME")
}

model Player {
  playerId       Int      @id @default(autoincrement())
  soccerPlayerId String   @unique
  name           String
  speed          Int
  attack         Int
  defence        Int
  price          Int 
  profileImage   String?
  rarity         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@map("Player")
}

model Goods {
  goodsId    Int    @id @default(autoincrement())
  name       String @unique
  cashAmount Int    @map("cash_amount")

  @@map("Goods")
}

model Gacha {
  gachaId   Int      @id @default(autoincrement())
  cardName  String   @unique
  price     Int
  bronze    Int
  silver    Int
  gold      Int
  diamond   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  platinum  Int
  gachaId         Int      @id @default(autoincrement())
  cardName   String   @unique
  price      Int
  bronze     Int
  silver     Int
  gold       Int
  paltinum   Int
  diamond    Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("Gacha")
}
